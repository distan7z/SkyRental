  <%= form_with url: drones_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a drone"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

<div class="container" style="background-image: linear-gradient(rgba(0,0,0,0.05),rgba(0,0,0,0.05)), url(https://res.cloudinary.com/ds4tpkzth/image/upload/v1677771086/billy-huynh-v9bnfMCyKbg-unsplash_uoqbez.jpg);">
  <div class="row d-flex ">
    <% @drones.each do |drone| %>
   <div class="col-lg-4">
      <div class="card-product">
        <%= link_to(drone_path(drone)) do %>
          <% if drone.photo.attached? %>
            <%= cl_image_tag drone.photo.key, height: 300, width: 400 %>
          <% else %>
            <img src="https://res.cloudinary.com/ds4tpkzth/image/upload/v1677677551/default_drone.png" alt="default_drone">
          <% end %>
        <% end %>
          <div class="card-product-infos">
            <strong><h2><%= drone.brand %></h2> </strong>
            <h3><%= drone.model %></h3>
            <h6>Starting at : <%= drone.price %> â‚¬</h6>
          </div>
      </div>
    </div>
    <% end %>
  </div>
 </div>
</div>
