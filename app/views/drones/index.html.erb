<h1>All our available drones</h1>
<div class="container">

  <%= form_with url: drones_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a drone"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="row d-flex justify-content-around">
    <% @drones.each do |drone| %>
   <div class="col-lg-4">
      <div class="card-product">
        <%= link_to(drone_path(drone)) do %>
          <% if drone.photo.attached? %>
            <%= cl_image_tag drone.photo.key, height: 300, width: 400 %>
          <% else %>
            <img src="https://res.cloudinary.com/ds4tpkzth/image/upload/v1677677551/default_drone.png" alt="default_drone">
          <% end %>
        <% end %>
          <div class="card-product-infos">
            <h2><%= drone.brand %></h2>
            <h3><%= drone.model %></h3>
            <h6>Starting at : <%= drone.price %> â‚¬</h6>
          </div>
      </div>
    </div>
    <% end %>
  </div>
 </div>
</div>
