<h1>Profile of <%= @user.first_name %> <%= @user.last_name %></h1>

<h2>Bookings</h2>
<div>
  <% @user.bookings.each do |booking| %>
    <div class="card">
      <p>Drone: <%= Drone.find(booking.drone_id).model %></p>
      <p>Dates: <%= booking.booking_start %> to <%= booking.booking_start %></p>
    </div>
  <% end %>
</div>

<h2>Drones on rents</h2>
<div>
  <% @user.drones.each do |drones| %>
    <div class="card">
      <p>Drone: <%= drone.model %></p>
    </div>
  <% end %>
</div>
